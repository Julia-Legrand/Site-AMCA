{% extends 'base.html.twig' %}

{% block title %}Devenir membre
{% endblock %}

{% block body %}
	{% include "_partials/_headerAdmin.html.twig" %}
	<main>
		<section class="row m-0">
			{% include "_partials/_sidebar.html.twig" %}

			<div class="col-md-10 editForm">
				<h2>Devenir membre</h2>

				<table class="table-responsive">
					<thead>
						<tr>
							<th>Bulletin d'adhésion</th>
							<th>Cotisation conducteur</th>
							<th>Cotisation passager</th>
							<th>Modifier</th>
						</tr>
					</thead>
					<tbody>
						{% for membership in memberships %}
							<tr>
								<td>
									<embed src="{{ asset('uploads/images/' ~ membership.membershipForm) }}" height="300px" type="application/pdf">
								</td>
								<td>{{ membership.driverFee }}
									euros</td>
								<td>{{ membership.passengerFee }}
									euros</td>
								<td>
									<a href="{{ path('app_memberships_edit', {'id': membership.id}) }}">
										<i class="fa-solid fa-pencil"></i>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">Donnée vide</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</section>
	</main>
{% endblock %}
