{% extends 'base.html.twig' %}

{% block title %}Commentaires
{% endblock %}

{% block body %}
	<h1>Commentaires</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Post relié</th>
				<th>Contenu</th>
				<th>Créé le</th>
				<th>Auteur</th>
				<th>Modifier</th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				{% for comment in post.comments %}
					<tr>
						<td>{{ comment.post.postTitle }}</td>
						<td>{{ comment.commentContent }}</td>
						<td>{{ comment.createdAt ? comment.createdAt|date('d-m-Y à H:i') : '' }}</td>
						<td>{{ comment.user.firstName ~ ' ' ~ comment.user.lastName }}</td>
						<td>
							<a href="{{ path('app_comments_edit', {'id': comment.id, 'postId': post.id}) }}">Modifier</a>
						</td>
					</tr>
				{% endfor %}
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
