{% extends 'base.html.twig' %}

{% block title %}Bibliothèque de photos
{% endblock %}

{% block body %}
	{% include "_partials/_headerAdmin.html.twig" %}
	<section class="row m-0">
		{% include "_partials/_sidebar.html.twig" %}

		<div class="dashboard">
			<h2>Bibliothèque de photos</h2>
			<a class="button" href="{{ path('app_trip_pictures_new') }}">Ajouter une photo à une sortie</a>

			<div class="allTrips">
				{% for previous_trip in previous_trips %}
					<div class="tripCard">
						<div class="header">
							{{ previous_trip.previousTripName }}
						</div>
						<div class="body">
							{% for tripPicture in previous_trip.tripPictures %}
								<img src="{{ asset('uploads/images/' ~ tripPicture.tripPicture) }}" alt="Photo de la sortie" width="200px" height="150px">
								<a href="{{ path('app_trip_pictures_edit', {'id': tripPicture.id}) }}">
									<i class="fa-solid fa-pencil icon"></i>
								</a>
							{% endfor %}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}


