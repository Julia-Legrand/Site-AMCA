{% extends 'base.html.twig' %}

{% block title %}Liste des adhérents{% endblock %}

{% block body %}
    <h1>Liste des adhérents</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro d'adhérent</th>
                <th>Attribution</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Date de naissance</th>
                <th>Moto</th>
                <th>Rôles</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.memberNumber }}</td>
                <td>{{ user.assignment ? user.assignment|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.postCode }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('d-m-Y') : '' }}</td>
                <td>{{ user.bike }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">Donnée vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
