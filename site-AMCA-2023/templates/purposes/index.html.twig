{% extends 'base.html.twig' %}

{% block title %}Nos raisons d'être{% endblock %}

{% block body %}
    <h1>Nos raisons d'être</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Contenu</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for purpose in purposes %}
            <tr>
                <td>{{ purpose.purposeContent }}</td>
                <td>
                    <a href="{{ path('app_purposes_edit', {'id': purpose.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Donnée vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_purposes_new') }}">Ajouter</a>
{% endblock %}
