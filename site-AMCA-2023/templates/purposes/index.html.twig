{% extends 'base.html.twig' %}

{% block title %}Nos raisons d'être
{% endblock %}

{% block body %}
	{% include "_partials/_headerAdmin.html.twig" %}
	<main>
		<section>
			{% include "_partials/_sidebar.html.twig" %}

			<div class="col-md-10" id="dashboard">
				<h1>Nos raisons d'être</h1>

				<table class="table-responsive">
					<thead>
						<tr>
							<th>Contenu</th>
							<th>Modifier</th>
						</tr>
					</thead>
					<tbody>
						{% for purpose in purposes %}
							<tr>
								<td>{{ purpose.purposeContent }}</td>
								<td>
									<a href="{{ path('app_purposes_edit', {'id': purpose.id}) }}">
										<i class="fa-solid fa-pencil"></i>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">Donnée vide</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<a class="button" href="{{ path('app_purposes_new') }}">Ajouter</a>
			</div>
		</section>
	</main>
{% endblock %}
