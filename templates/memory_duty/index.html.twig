{% extends 'base.html.twig' %}

{% block title %}Devoir de mémoire{% endblock %}

{% block body %}
{% include "_partials/_headerAdmin.html.twig" %}
	<section>
		{% include "_partials/_sidebar.html.twig" %}

		<div class="dashboard">
            <h1>Devoir de mémoire</h1>
            <a class="button" href="{{ path('app_memory_duty_new') }}" width="284px">Ajouter une personne</a>

            <div class="all-people">
                {% for memory_duty in memory_duties %}
                    <div class="personCard">
						<div class="header">
                            <h2>{{ memory_duty.memoryTitle }}</h2>
                        </div>
						<div class="body">
                            <div class="pic">
								<img loading="lazy" src="{{ asset('uploads/' ~ memory_duty.memoryPicture) }}" alt="Photo de la personne">
								<a href="{{ path('app_memory_duty_edit', {'id': memory_duty.id}) }}">
									<i class="fa-solid fa-pencil icon"></i>
								</a>
							</div>
                            <div class="text">
                                <p class="description">{{ memory_duty.memoryContent }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
	</section>
{% endblock %}
