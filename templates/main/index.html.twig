{% extends 'base.html.twig' %}

{% block title %}Association AMCA 44
{% endblock %}

{% block body %}
	<header class="headerIndex">
		{% for presentation in presentations %}
			<img src="{{ asset('images/logo-blanc-transparent.png') }}" alt="Logo de l'AMCA">
			<h1>{{ presentation.presentationTitle }}</h1>
		{% endfor %}
		{% include "_partials/_navbar.html.twig" %}
	</header>

	<main>

		<!--OUR STORY-->
		<section id="our-story">
			{% for presentation in presentations %}
				<div class="story-picture animate-from-left">
					<img loading="lazy" src="{{ asset('uploads/' ~ presentation.presentationPicture) }}" alt="Photo des membres fondateurs">
				</div>
				<div class="story-text animate-from-right">
					<h2>Notre histoire</h2>
					<p>{{ presentation.presentationContent }}</p>
				</div>
			{% endfor %}
		</section>

		<!--OUR PURPOSES-->
		<section id="our-purposes">
			<h2>Nos raisons d'être</h2>
			<div class="our-purposes">
				{% for purpose in purposes %}
					<div class="purpose">
						<p>
							<strong>{{ purpose.purposeContent }}</strong>
						</p>
					</div>
				{% endfor %}
			</div>
		</section>

		<!--PREVIOUS TRIPS-->
		<section id="our-previous-trips">
			<img class="logo-asso" src="{{ asset('images/logo-blanc-transparent.png') }}" alt="Logo de l'AMCA">
			<h2>Nos précédentes sorties</h2>
			<div class="previous-trips">
				{% for previous_trip in previous_trips %}
					<div class="previous-trip">
						<div class="previous-trip-picture">
							<div id="carousel{{ loop.index }}" class="carousel slide" data-bs-ride="carousel">
								<div class="carousel-inner">
									{% for tripPicture in previous_trip.getTripPictures() %}
										<div class="carousel-item{% if loop.first %} active{% endif %}">
											<img loading="lazy" src="{{ asset('uploads/' ~ tripPicture.tripPicture) }}" class="d-block" alt="Photo d'une sortie effectuée précédemment">
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
						<div class="previous-trip-text">
							<h3>{{ previous_trip.previousTripName }}</h3>
							<p>{{ previous_trip.previousTripContent }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>

		<!--OTHER CLUB-->
		<section id="other-club">
			{% for other_club in other_clubs %}
				<div class="moto-club">
					<div class="club-picture">
						<img loading="lazy" src="{{ asset('uploads/' ~ other_club.otherClubPicture) }}" alt="Photo du club jumelé">
					</div>
					<div class="club-text">
						<h2>{{ other_club.otherClubTitle }}</h2>
						<p>{{ other_club.otherClubContent }}</p>
						<p>
							<a href="{{ other_club.otherClubWebsite }}" target="_blank">
								<i class="fa-regular fa-hand-peace" style="margin-right: 5px;"></i>
								{{ other_club.otherClubTitle }}</a>
						</p>
					</div>
				</div>

			{% endfor %}
		</section>

		<!--CONTACT-->
		<section id="contact-us">
			<div class="contact-email">
				<p class="contactIndex">Envie de nous rejoindre ?</p>
				<a href="mailto:amca44500@gmail.com" class="buttonIndex">Contactez-nous !</a>
			</div>
			<div class="contact-facebook">
				<p class="contactIndex">Notre page Facebook</p>
				<a href="https://www.facebook.com/people/Asso-Amca/pfbid02EdV1ANoYryPtf92ef283uzQVkT3FkFBqWF7iVFTLVdYs3ekSrCyzNNhachXBRajBl/" target="_blank">
					<i class="fa-brands fa-facebook"></i>
				</a>
			</div>
		</section>

	</main>
	{% include "_partials/_footer.html.twig" %}
{% endblock %}
