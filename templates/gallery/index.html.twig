{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block body %}
{% include "_partials/_headerAdmin.html.twig" %}
	<section>
		{% include "_partials/_sidebar.html.twig" %}

		<div class="dashboard">
            <h1>Galerie de photos</h1>
            <a class="button" href="{{ path('app_gallery_new') }}" width="284px">Ajouter une photo</a>

            <div class="all-pictures">
                {% for gallery in galleries %}
                    <div class="pictureCard">
                        <div class="body">
                            <div class="pic">
                                <img loading="lazy" src="{{ asset('uploads/' ~ gallery.galleryPicture) }}" alt="Photo">
                                <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}">
                                    <i class="fa-solid fa-pencil icon"></i>
                                </a>
                            </div>
                            <p class="description">{{ gallery.galleryComment }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
	</section>
{% endblock %}
